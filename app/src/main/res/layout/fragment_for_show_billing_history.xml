<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_non"
        android:layout_width="match_parent"
        android:backgroundTint="@color/colorPrimary"
        android:layout_height="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView android:id="@+id/TextView_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/liteblack"
            android:text="stock Id"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/TextView_values"
            android:text="Qty"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_centerVertical="true"
            android:textColor="@color/liteblack"
            android:textStyle="bold" />
        <TextView android:id="@+id/Textview_for_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/TextView_stock"
            android:gravity="center"
            android:text="Price"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_centerVertical="true"
            android:textColor="@color/liteblack"
            android:textStyle="bold" />
        <TextView android:id="@+id/TextView_values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/liteblack"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="Values"
            android:textStyle="bold" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_for_salesDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/cardView_non"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_nony"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_below="@+id/recyclerView_for_salesDetail">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:id="@+id/TextView_grandTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
               android:layout_centerVertical="true"
                android:text="Total"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />
            <TextView android:id="@+id/TextView_grandTotal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grand Total : "
                android:layout_centerVertical="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/liteblack"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:backgroundTint="@color/colorPrimary">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/show_expenses_expenses_category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="expenses category : "
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/show_expenses_expenses_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/show_expenses_expenses_category_text"
                android:text="expenses "
                android:padding="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="30dp"/>

                <TextView
                    android:id="@+id/show_expenses_expenses_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="expenses price    : "
                    android:layout_below="@+id/show_expenses_expenses_category_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/show_expenses_expenses_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/show_expenses_expenses_category_text"
                    android:layout_below="@+id/show_expenses_expenses_category"
                    android:text="price "
                    android:padding="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/show_expenses_expenses_payment_mode_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="exp.payment Mode: "
                    android:layout_below="@+id/show_expenses_expenses_price_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary" />
                <TextView
                    android:id="@+id/show_expenses_expenses_payemnt_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/show_expenses_expenses_category_text"
                    android:layout_below="@+id/show_expenses_expenses_price"
                    android:text="payment mode "
                    android:padding="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/show_expenses_expenses_description_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="exp. description : "
                    android:layout_below="@+id/show_expenses_expenses_payment_mode_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary" />
                <TextView
                    android:id="@+id/show_expenses_expenses_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/show_expenses_expenses_category_text"
                    android:layout_below="@+id/show_expenses_expenses_payemnt_mode"
                    android:text="description "
                    android:padding="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="30dp"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
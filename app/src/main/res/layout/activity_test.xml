<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Test">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardElevation="6dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:layout_centerHorizontal="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/liteblack"
                android:textStyle="bold"/>



            <TextView
                android:id="@+id/text_total_sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Sell               : "
                android:layout_marginTop="30dp"
                android:layout_marginStart="80dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_below="@+id/textView_today"/>

            <TextView
                android:id="@+id/text_total_sell_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0 "
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/text_total_sell"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_below="@+id/textView_today"/>

            <TextView
                android:id="@+id/text_total_purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Purchase     : "
                android:layout_marginTop="10dp"
                android:layout_marginStart="80dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_below="@+id/text_total_sell"/>


            <TextView
                android:id="@+id/text_total_purchase_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0 "
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/text_total_purchase"
                android:layout_marginStart="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_below="@+id/text_total_sell"/>

            <TextView
                android:id="@+id/text_net_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Net Profit or Loss : "
                android:layout_marginTop="10dp"
                android:layout_marginStart="80dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_below="@+id/text_total_purchase"/>

            <TextView
                android:id="@+id/text_net_profit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0 "
                android:layout_toRightOf="@+id/text_net_profit"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_below="@+id/text_total_purchase"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardElevation="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_Tomorrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yesterday"
                android:layout_centerHorizontal="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/liteblack"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_Tommorrow_total_sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Sell               : "
                android:layout_marginTop="30dp"
                android:layout_marginStart="80dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_below="@+id/textView_Tomorrow"/>


            <TextView
                android:id="@+id/text_Tommorrow_total_sell_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text_Tommorrow_total_sell"
                android:layout_marginTop="30dp"
                android:text="0.0 "
                android:layout_marginStart="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_below="@+id/textView_Tomorrow"/>

            <TextView
                android:id="@+id/text_tommorroe_total_purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Purchase     : "
                android:layout_marginTop="10dp"
                android:layout_marginStart="80dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_below="@+id/text_Tommorrow_total_sell"/>

            <TextView
                android:id="@+id/text_tommorroe_total_purchase_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0 "
                android:layout_toRightOf="@+id/text_tommorroe_total_purchase"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_below="@+id/text_Tommorrow_total_sell"/>

            <TextView
                android:id="@+id/text_tommorrow_net_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Net Profit or Loss : "
                android:layout_marginTop="10dp"
                android:layout_marginStart="80dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_below="@+id/text_tommorroe_total_purchase"/>

            <TextView
                android:id="@+id/text_tommorrow_net_profit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0 "
                android:layout_toRightOf="@+id/text_tommorrow_net_profit"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_below="@+id/text_tommorroe_total_purchase"/>





        </RelativeLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>
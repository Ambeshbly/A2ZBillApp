<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:backgroundTint="@color/colorPrimary">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_cust_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="customer id     : "
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:id="@+id/text_cust_id1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text_cust_id"
                    android:text="cust id "
                    android:padding="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:id="@+id/text_cust_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="customer name : "
                    android:layout_below="@+id/text_cust_id"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/text_cust_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text_cust_id"
                    android:layout_below="@+id/text_cust_id1"
                    android:text="name"
                    android:padding="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/text_cust_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cust phone no :  "
                    android:layout_below="@+id/text_cust_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary" />
                <TextView
                    android:id="@+id/text_cust_phone1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text_cust_id"
                    android:layout_below="@+id/text_cust_name1"
                    android:text="no "
                    android:padding="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/text_cust_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer add. : "
                    android:layout_below="@+id/text_cust_phone"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary" />
                <TextView
                    android:id="@+id/text_cust_add1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text_cust_id"
                    android:layout_below="@+id/text_cust_phone1"
                    android:text="address "
                    android:padding="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="30dp"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
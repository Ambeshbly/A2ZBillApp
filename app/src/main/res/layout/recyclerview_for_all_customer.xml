<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:padding="8dp">
        <TextView
            android:id="@+id/text_debt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dept."
            android:layout_marginTop="40dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
          android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/text_view_customer_debt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="1"
            android:layout_below="@+id/text_debt"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <TextView
            android:id="@+id/text_view_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"
            android:layout_toStartOf="@+id/text_view_customer_debt"
            android:layout_alignParentStart="true"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/text_view_customer_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_customer_name"
            android:text="Customer Id"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
           android:layout_toRightOf="@id/text_id"
          />
        <TextView
            android:id="@+id/text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id: "
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_below="@+id/text_view_customer_name"/>
        <TextView
            android:id="@+id/menu_in_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#8942;"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:padding="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>
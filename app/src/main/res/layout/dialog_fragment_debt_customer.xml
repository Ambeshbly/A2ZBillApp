<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/debtback"
    android:layout_height="480dp">


 <EditText
     android:layout_marginTop="30dp"
     android:id="@+id/edit_customer_Id"
     android:hint="Cust Id"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textCustName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cust name"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/edit_customer_Id"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_prodeed_payment"
        android:layout_alignParentEnd="true"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/edit_customer_Id"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/colorPrimary"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/save" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proceed"
                android:textColor="#ffff"
                android:textSize="12sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <EditText
        android:id="@+id/edit_customerName"
        android:hint="cust name"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/cardview_prodeed_payment"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edit_customerPhoneNo"
        android:hint="cust phone No"
        android:layout_width="match_parent"
        android:layout_below="@+id/edit_customerName"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edit_customeAdd"
        android:hint="cust Address"
        android:layout_width="match_parent"
        android:layout_below="@+id/edit_customerPhoneNo"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_prodeed_payment2"
        android:layout_alignParentEnd="true"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/edit_customeAdd"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/colorPrimary"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/save" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proceed"
                android:textColor="#ffff"
                android:textSize="12sp" />edit_customer_Id
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
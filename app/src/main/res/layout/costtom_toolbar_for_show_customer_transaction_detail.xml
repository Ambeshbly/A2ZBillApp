<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:popupTheme="@style/AppTheme"
    android:id="@+id/myToolbarCustomer"
    android:background="@color/colorPrimary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/bt_Button"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Pay"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#fff"
            android:background="@color/blue"/>

        <ImageView
         android:id="@+id/customer_icon"
         android:layout_width="60sp"
         android:layout_height="50dp"
         android:layout_centerVertical="true"
         android:src="@drawable/per"
         android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/customer_name_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:id="@+id/customer_phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone No"
            android:layout_centerHorizontal="true"
            android:textColor="@color/blue"
            android:layout_below="@+id/customer_name_title_bar"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        <TextView
            android:id="@+id/customer_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_centerHorizontal="true"
            android:textColor="@color/blue"
            android:layout_below="@+id/customer_phone_no"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>


        <TextView
        android:id="@+id/toolbar_debt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="debt"
            android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/bt_Button"
        android:padding="10dp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>



        <TextView
            android:id="@+id/menu_in_customerDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#8942;"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_above="@+id/toolbar_debt"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    </RelativeLayout>


</RelativeLayout>
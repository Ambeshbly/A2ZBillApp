<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">




        <TextView
            android:id="@+id/text_view_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"

            android:ellipsize="end"/>

        <TextView
            android:id="@+id/text_view_show_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:layout_alignParentEnd="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:id="@+id/text_view_show_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id: "
            android:layout_toLeftOf="@+id/text_view_show_id"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:id="@+id/text_view_sale_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 "
            android:layout_alignParentEnd="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_below="@+id/text_view_show_id" />

        <TextView
            android:id="@+id/text_view_sale_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sale price : "
            android:layout_below="@+id/text_view_show_id"
            android:layout_toLeftOf="@+id/text_view_sale_price"
            android:layout_marginTop="3dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginEnd="2dp"
    android:layout_marginTop="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_sale_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_view_sale_id_text"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:text="Sale Id"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/liteblack" />

        <TextView
            android:id="@+id/text_view_sale_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="8dp"
            android:text="Sale Id :  "
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/liteblack" />

        <TextView
            android:id="@+id/paymenttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_sale_id"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:text="Case"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/liteblack" />

        <TextView
            android:id="@+id/paymentdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/payment"
            android:maxLines="1"
            android:textColor="@color/red"
            android:layout_marginTop="10dp"
            android:text="Date"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/text_view_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/paymentdate"
            android:text="Date"
            android:layout_marginEnd="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/red" />


        <TextView
            android:id="@+id/payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Date"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
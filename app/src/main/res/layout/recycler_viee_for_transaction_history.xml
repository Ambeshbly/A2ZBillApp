<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginEnd="2dp"
    android:layout_marginTop="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_sale_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_view_sale_id_text"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:text="Sale Id"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/liteblack" />

        <TextView
            android:id="@+id/text_view_sale_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="8dp"
            android:text="Sale Id :  "
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/liteblack" />

        <TextView
            android:id="@+id/paymenttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_sale_id"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:text="Case"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/liteblack" />

        <TextView
            android:id="@+id/paymentdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/menu_in_recyclerview"
            android:maxLines="1"
            android:text="Date"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/text_view_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="130"
            android:layout_marginEnd="35dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/liteblack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_view_Total_amt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/text_view_total"
            android:text="Total Amt: "
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/menu_in_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:text="&#8942;"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            android:textColor="@color/liteblack"
            android:textSize="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
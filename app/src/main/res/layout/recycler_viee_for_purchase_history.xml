<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp">


        <TableLayout
            android:layout_width="match_parent"
            android:background="@color/blue"
            android:gravity="center"
            android:layout_height="45dp">
            <TableRow
                android:minHeight="45dp"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/text_view_sale_detail_name"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:text="item name"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:background="#ffff"
                    android:layout_marginBottom="1dp"
                    android:layout_marginHorizontal="1dp"
                    android:textColor="@color/liteblack"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_view_sale_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="price"
                    android:textColor="@color/liteblack"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="#ffff"
                    android:textStyle="bold"
                    android:minWidth="80dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_view_sale_detail_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Qty"
                    android:minWidth="80dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="#ffff"
                    android:layout_marginRight="1dp"
                    android:textColor="@color/liteblack"
                    android:textSize="18sp"
                    android:layout_marginBottom="1dp"
                    android:textStyle="bold" />

                <TextView android:id="@+id/text_view_sale_detail_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Values"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="#ffff"
                    android:minWidth="80dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:textColor="@color/liteblack"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>